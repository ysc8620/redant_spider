<beans>
	<!--
	  | name:名称
	  | enable:0|1是否开启本网站的抓取
	  | charset:网站字符集
	-->
	<site name="zy" website_id="1"  xpath="base_parser" enable="1" charset="utf-8">
		<!--
		  | HTTP Header
		<headers>
			<header name="Referer" value="http://www.straitsdeal.com/deals/" />
		</headers>-->
		<!--
		  | HTTP Cookie
		<cookies>
			<cookie name="" value="" host="" path="" />
		</cookies>-->
        <!--
        !settings-->
        <allowedDomains>
            <url url="360kan.com" />
        </allowedDomains>

        <startUrls>
            <!--<url url="https://www.imobshop.sg/tech/huawei-g730-black-white" />-->
            <url url="http://www.360kan.com/" />
            <url url="http://www.360kan.com/zongyi/index.html" />
            <url url="http://www.360kan.com/zongyi/list.php" />
        </startUrls>
		<!--
		  | 进入任务队列的URL规则
		  | policy:多个rule的策略，暂时只实现了and，未来会有or
		-->
		<queueRules>
			<!--
			  | 规则
			  | type:规则类型，包括 regex | equal | start | end | contains 所有规则可以在前面添加 "!" 表示取反
			  | value:值
			-->
            <rule rule="http://www.360kan.com/$"/>
            <rule rule="/zongyi/(\w+).html$" />
            <rule rule="/zongyi/list.php((\?|&amp;)(cat=(all|\d+)|pageno=[1-3]|rank=createtime|area=all|year=all|act=all)){0,6}$" />
            <rule rule="/va/(\w+).html$" callback="parse_item" />
		</queueRules>
		<!--
		  | 抓取目标
		-->
		<targets>
			<!--
			  | name:目标表名
			-->
			<target name="deal">
                 <!--
                !预处理数据-->
                <beforehand>

                </beforehand>
                <!---
                | 判断是否继续跟进目标进入 parse item
                -->
                <!--
				<isFollow>
                    <parsers>
					    <parser xpath="//input[@name='product']/@value" />
                    </parsers>
				</isFollow>-->

                <isExist name="site_id">
                    <parsers>
					    <parser xpath="//input[@name='product']/@value" />
                    </parsers>
				</isExist>

				<!--
				  | 目标网页的数据模型
				-->
				<model>
                    <!--
                    !需要入库的字段
                    !对应的值名
                    -->
                    <sqlfields>
                        <fields name="title,old_pic,website_id,site_id,uptime,cid_ids,cid_name,class_ids,class_name,area,year,actor,director,jump_info,play_make,gold,golder,is_finish,update_remark,watch_str,film_time,url,jump_url,play_type,content,status,addtime"
                                update="jump_url,is_finish,update_remark,play_type,jump_info,uptime"/>
                    </sqlfields>
					<!--
					  | 属性的配置
					  | name:属性名称
					  | parser:针对该属性的解析规则
					-->
					<field name="title" isTrim="1">
						<!--
						  | xpath: XPath规则，如果目标页面是XML，则可以使用2.0语法，否则HTML的话暂时只能1.0
						  | attribute:当使用XPath解析后的内容不是文本而是一个Node节点对象的时候，可以给定一个属性名获取其属性值例如<img src="" />
						  | regex:当使用XPath（包括attribute）规则获取到的文本内容不满足需求时，可以继续设置regex正则表达式进行解析
						  | exp:当使用XPath获取的文本(如果获取的不是文本则会先执行exp而不是regex否则先执行regex)不满足需求时，可以继续这是exp表达式进行解析
						  |     exp表达式有几个内置对象和方法:
						-->
						<parsers>
							<parser xpath="//span[@id='film_name']/text()" />
						</parsers>
					</field>
                    <!--主图-->
                     <field name="old_pic" def="">
                        <parsers>
                            <parser xpath="//div[@id='poster']//img/@src" />
                        </parsers>
					</field>
                    <!--站点对应编号-->
                    <field name="site_id" def="0">
                        <parsers>
                            <parser xpath="//div[@id='poster']//a/@movieid" />
                        </parsers>
                    </field>
                    <!--分类编号-->
                    <field name="cid_ids" def="4"></field>
                    <!--分类-->
					<field name="cid_name" def="综艺">
					</field>
                    <!--类型编号-->
                    <field name="class_ids" def=""></field>
                    <!--类型-->
                    <field name="class_name">
                        <parsers>
                            <parser xpath="//div[@id='otherinfo']//p[contains(.//em/text(), '类型：')]/span/text()" />
                        </parsers>
                    </field>
                    <field name="website_id" def="1">
                    </field>
                    <!--地区-->
					<field name="area" def="">
						<parsers>
                            <parser xpath="//div[@id='otherinfo']//p[contains(.//em/text(), '地区：')]/span/text()" />
                        </parsers>
					</field>
                    <!--年代-->
                    <field name="year" def="">

					</field>
                    <!--主演-->
					<field name="actor" def="">
						<parsers>
                            <parser xpath="//div[@id='otherinfo']//p[contains(.//em/text(), '主持人：')]/span/text()" />
                        </parsers>
					</field>
					<field name="play_make" def="">
						<parsers>
                            <parser xpath="//div[@id='otherinfo']//p[contains(.//em/text(), '播出：')]/span/text()" />
                        </parsers>
					</field>

					<field name="gold" def="0" isTrim="1">

					</field>
					<field name="golder" def="0" isTrim="1">

					</field>
                    <field name="is_finish" def="0">

                    </field>
                    <field name="update_remark" def="">
                        <parsers>
                            <parser xpath="//div[@id='info']//div[contains(.//em/text(), '剧集：')]/p" />
                            <parser rep="_Tags.xml(_this).rm('p').rm('span').rm('em').empty().run()" />
                        </parsers>
                    </field>

                    <field name="watch_str" def="">

                    </field>

                    <field name="film_time" def="0"></field>
                    <field name="url">
                        <parsers>
                            <parser rep="url" />
                        </parsers>
                    </field>
                    <field name="jump_data" isArray="1">
                        <parsers>
                            <parser xpath="//div[@id='tv-play']//div[@class='content']//div[contains(@class,'full')]" />
                        </parsers>
                    </field>
                    <field name="play_type" isArray="1" >
                        <parsers>
                            <parser xpath="//div[@id='listing']/ul[@id='supplies']/li/@site" />
                            <parser rep="'$$$'.join(_this)" />
                        </parsers>
                    </field>
                    <field name="play_type" def="" >
                        <parsers>
                            <parser xpath="//div[@id='listing']//div[contains(@class,'single')]//a/@class" />
                            <parser rep="_this.replace('gico-site','').replace('gico-','')" />

                        </parsers>
                    </field>
					<field name="content" isTrim="1">
						<parsers>
							<parser xpath="//p[@id='part-intro']" />
                            <parser rep="_Attrs.xml(_this).rm('class').rm('style').run()" />
                            <parser rep="_Tags.xml(_this).rm('a').rm('p').rm('span').empty().run()" />
						</parsers>
					</field>
                    <field name="addtime" def="0">
                        <parsers>
                            <parser rep="int(time.time())" />
                        </parsers>
                    </field>
                    <field name="uptime" def="0">
                        <parsers>
                            <parser rep="int(time.time())" />
                        </parsers>
                    </field>
                    <field name="status" def="1">
                    </field>
                    <field name="jump_url" def="">
                    </field>
                    <field name="jump_info" def="">
                    </field>
				</model>

                <afterParser>
                    <field name="jump_data">
                        <parsers>
                            <parser rep="parse_zy(item['rowItem']['play_type'],item['rowItem']['url'])" />
                        </parsers>
                    </field>

                    <field name="jump_url">
                        <parsers>
                            <parser rep="item['rowItem']['jump_data']['jump_url']" />
                        </parsers>
                    </field>

                    <field name="jump_info">
                        <parsers>
                            <parser rep="item['rowItem']['jump_data']['jump_info']" />
                        </parsers>
                    </field>
                </afterParser>
                <!--
                ! 入库前预处理数据
                img = small_pic = big_pic = old_pic
                -->
                <beforeInsert>
                    <field name="pic">
						<parsers>
							<parser rep="/uploaded/' + item['images'][0].replace( 'original','thumb400')" />
						</parsers>
					</field>

                </beforeInsert>
			</target>
		</targets>
		<!--
		  | 插件
		-->
		<plugins>
			<!--
			  | enable:是否开启
			  | name:插件名
			  | version:插件版本
			  | desc:插件描述
			-->
			<plugin enable="1" name="spider_plugin" version="0.0.1" desc="这是一个官方实现的默认插件，实现了所有扩展点。">
				<providers>
					<provider>
						<orgnization name="佳乐影视" website="" desc="致力于打造一流的社交分享购物社区!">
							<author name="ShengYue" website="http://blog.sina.com.cn/leshengchang" email="ysc8620@163.com" weibo="http://weibo.com/aisls" desc="" />
						</orgnization>
					</provider>
				</providers>
			</plugin>
		</plugins>
	</site>
</beans>
